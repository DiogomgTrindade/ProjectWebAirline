@model ProjectWebAirlineMVC.Data.Entities.Aircraft

@{
    ViewData["Title"] = "Details";
}

<h4 class="text-center">Details</h4>

<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Capacity)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Capacity)
            </dd>
        </dl>
    </div>

    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImageFullPath))
        {
            <img src="@Url.Content(Model.ImageFullPath)" alt="Image" class="img-fluid rounded" style="max-height: 350px; object-fit: cover; width: 100%;" />
        }
    </div>
</div>

<br />

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary"><i class="fa-solid fa-pencil"></i> Edit</a>
    <a asp-action="Index" class="btn btn-light">Back to List</a>
</div>
