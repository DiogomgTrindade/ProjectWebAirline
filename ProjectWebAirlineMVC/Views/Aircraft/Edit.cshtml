@model ProjectWebAirlineMVC.Models.AircraftViewModel

@{
    ViewData["Title"] = "Edit Aircraft";
}

<h4>Edit</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageId" />
            <partial name="_Aircrafts" />
            <br />


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index">Back to List</a>

            </div>
        </form>
    </div>
    <div class="col-md-4">
        <td>
            <img src="@Url.Content(Model.ImageFullPath)" alt="Image" style="width: 400px; height:350px; max-width:100%" ; height="auto" />
        </td>
    </div>
</div>

