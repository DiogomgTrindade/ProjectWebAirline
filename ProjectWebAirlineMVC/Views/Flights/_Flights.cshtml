@model ProjectWebAirlineMVC.Models.FlightViewModel



<div class="form-group">
    <label asp-for="FlightNumber" class="control-label"></label>
    <input asp-for="FlightNumber" class="form-control" />
    <span asp-validation-for="FlightNumber" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Date" class="control-label"></label>
    <input asp-for="Date" class="form-control" />
    <span asp-validation-for="Date" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="OriginCountryId" class="control-label"></label>
    <select asp-for="OriginCountryId" class="form-control" asp-items="Model.Countries"></select>
    <span asp-validation-for="OriginCountryId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="DestinationCountryId" class="control-label"></label>
    <select asp-for="DestinationCountryId" class="form-control" asp-items="Model.Countries"></select>
    <span asp-validation-for="DestinationCountryId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="AircraftId" class="control-label"></label>
    <select asp-for="AircraftId" class="form-control" asp-items="Model.Aircrafts"></select>
    <span asp-validation-for="AircraftId" class="text-danger"></span>
</div>
