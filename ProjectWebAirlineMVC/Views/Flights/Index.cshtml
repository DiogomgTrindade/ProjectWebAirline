@model IEnumerable<ProjectWebAirlineMVC.Data.Entities.Flight>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Create new Flight</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().OriginCountry.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().DestinationCountry.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OriginCountry.Name) 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DestinationCountry.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
